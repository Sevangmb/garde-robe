# Variables d'environnement pour Render.com
# Copiez ces variables dans le dashboard Render → Settings → Environment

# Django Configuration
DJANGO_SETTINGS_MODULE=gestion_vetements.settings_prod
SECRET_KEY=<GENERER_VALEUR_DEPUIS_RENDER>
DEBUG=False

# Allowed Hosts (séparés par virgules)
ALLOWED_HOSTS=.onrender.com,votre-app.onrender.com

# CSRF Trusted Origins (séparés par virgules, avec https://)
CSRF_TRUSTED_ORIGINS=https://votre-app.onrender.com

# CORS Allowed Origins (si vous utilisez une app mobile)
CORS_ALLOWED_ORIGINS=https://votre-app.onrender.com

# Database PostgreSQL sur Unraid
DB_HOST=db.votredomaine.com
DB_PORT=5432
DB_NAME=garde_robe_db
DB_USER=garde_robe_user
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE

# Media Storage - nginx Unraid
MEDIA_URL=https://media.votredomaine.com/media/

# SFTP Configuration pour upload images vers Unraid
UNRAID_SFTP_HOST=sftp.votredomaine.com
UNRAID_SFTP_PORT=22
UNRAID_SFTP_USER=root
UNRAID_SFTP_PASSWORD=VOTRE_MOT_DE_PASSE_UNRAID
# OU utiliser une clé SSH (recommandé)
# UNRAID_SFTP_KEY_PATH=/etc/secrets/unraid_ssh_key
UNRAID_MEDIA_PATH=/mnt/user/appdata/garde-robe/media/

# Security (optionnel)
SECURE_SSL_REDIRECT=True
